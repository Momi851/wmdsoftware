@model IEnumerable<wmdsoftware.Models.Visitorregistration>

@{
    ViewData["Title"] = "Visitor List";
}



<style>
    .visitor-table {
        background-color: #fff;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

        .visitor-table th {
            font-weight: 600;
            color: #333;
        }

        .visitor-table td {
            vertical-align: middle;
        }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 10px;
    }

    .status-badge {
        padding: 0.35em 0.75em;
        font-size: 0.75rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .status-active {
        background-color: #2ecc71;
        color: white;
    }

    .status-inactive {
        background-color: #f39c12;
        color: white;
    }

    .status-hold {
        background-color: #3498db;
        color: white;
    }

    .status-rejected {
        background-color: #e74c3c;
        color: white;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Recent Visitors</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="visitor-table table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Visitor</th>
                    <th>Designation</th>
                    <th>Company</th>
                    <th>City</th>
                    <th>Email</th>
                    <th>Number</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://ui-avatars.com/api/?name=@item.Name&background=random" class="avatar" />
                                <div>@item.Name</div>
                            </div>
                        </td>
                        <td>@item.Designation</td>
                        <td>@item.Company</td>

                       

                        <td>@item.City</td>

                        <td>@item.Email</td>
                        <td>@item.ContactNumber</td>
                        <td>
                            @* For demo, assigning random status classes. You can replace with item.Status *@
                            <span class="status-badge status-active">Active</span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
